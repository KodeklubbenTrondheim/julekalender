{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "site": "kodekalender",
    "public": "build",
    "trailingSlash": false,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/build/**",
        "destination": "/build/index.html"
      }
    ]
  }
}
